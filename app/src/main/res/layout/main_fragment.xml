<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtV_output_top"
            android:text="this is sample text top"
            android:textSize="@dimen/txt_size_small"
            android:textColor="@color/txt_color_main"
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/txtV_output_main"
            android:text="this is sample text console"
            android:textSize="@dimen/txt_size_normal"
            android:textColor="@color/txt_color_main"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relLay_btns_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>